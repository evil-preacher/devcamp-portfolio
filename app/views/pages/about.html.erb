<div class="app-card-container">
  <div class="card">
    <h1>About Me</h1>
    <div class="row">
      <div class="col-md-4">
        <%= image_tag "profile.jpg", width: 300, alt: "Profile image" %>
      </div>
      <div class="col-md-8">
        <p>I'm Ruby on Rails developer</p>

        <p>
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#jobHistory"
            aria-expanded="false"
            aria-controler="jobHistory"
          >
          Job History
          </button>

          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#education"
            aria-expanded="false"
            aria-controler="education"
          >
          Education
          </button>
        </p>
        <p>
          <div class="collapse" id="jobHistory">
            <div class="card card-block">
              Job 1
            </div>
            <div class="card card-block">
              Job 2
            </div>
            <div class="card card-block">
              Job 3
            </div>
          </div>
        </p>
        <p>
          <div class="collapse" id="education">
            <div class="card card-block">
              Education 1
            </div>
            <div class="card card-block">
              Education 2
            </div>
            <div class="card card-block">
              Education 3
            </div>
          </div>
        </p>
      </div>
    </div>
  </div>
</div>
